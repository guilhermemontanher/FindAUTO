<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adapterAnuncioImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#A0E6E6E6"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/adapterAnuncioTextViewTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/adapterAnuncioTextViewPreco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adapterAnuncioTextViewTitulo"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/money"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/adapterAnuncioTextViewData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:textAlignment="textEnd"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/adapterAnuncioImageTipo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_motorcycle_black_24dp"
                android:layout_alignParentRight="true"
                android:tint="#757575"
                android:layout_margin="4dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>