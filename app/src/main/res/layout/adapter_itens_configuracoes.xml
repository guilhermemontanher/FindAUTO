<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/image_view_item_opcao_configuracoes"
            android:src="@drawable/ic_help_outline_white_24dp"
            android:background="@drawable/oval_shape_accent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/text_view_item_opcao_configuracoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:text="Ajuda"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/text_view_item_qt1_minha_conta"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:tint="#666666" />

    </LinearLayout>

</RelativeLayout>