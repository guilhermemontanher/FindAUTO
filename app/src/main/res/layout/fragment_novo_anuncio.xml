<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Título"
                    android:lines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="Descricao"
                    android:lines="1"
                    android:maxLines="8"
                    android:minLines="2" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputVeiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextVeiculo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Veiculo"
                    android:lines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputPreco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextPreco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Preço"
                    android:inputType="numberDecimal"
                    android:lines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputQuilometragem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/editTextQuilometragem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quilometragem (Km)"
                    android:inputType="numberDecimal"
                    android:lines="1" />
            </android.support.design.widget.TextInputLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="128dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageAnuncio1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:background="#e6e6e6"
                        android:scaleType="center"
                        android:src="@drawable/ic_photo_camera_black_36dp" />

                    <ImageView
                        android:id="@+id/imageAnuncio2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:background="#e6e6e6"
                        android:scaleType="center"
                        android:src="@drawable/ic_photo_camera_black_36dp" />

                    <ImageView
                        android:id="@+id/imageAnuncio3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:background="#e6e6e6"
                        android:scaleType="center"
                        android:src="@drawable/ic_photo_camera_black_36dp" />

                    <ImageView
                        android:id="@+id/imageAnuncio4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:background="#e6e6e6"
                        android:scaleType="center"
                        android:src="@drawable/ic_photo_camera_black_36dp" />

                    <ImageView
                        android:id="@+id/imageAnuncio5"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:background="#e6e6e6"
                        android:scaleType="center"
                        android:src="@drawable/ic_photo_camera_black_36dp" />

                    <ImageView
                        android:id="@+id/imageAnuncio6"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:background="#e6e6e6"
                        android:scaleType="center"
                        android:src="@drawable/ic_photo_camera_black_36dp" />

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSalvarAnuncio"
                style="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:drawableTint="@android:color/white"
                android:padding="16dp"
                android:text="Publicar"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>